<div class="container">
<%= form_for :client do |f| %>
  <div class="col-lg-12" >
    <h3>Basic Information:</h3>
    <p class="col-lg-6">
      <%= f.label :name, "Name" %><br>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Full Name" %>
    </p>
   
    <p class="col-lg-6">
      <%= f.label :company, "Company" %><br>
      <%= f.text_field :company, class: "form-control", placeholder: "Enter Company Name" %>
    </p>

    <p class="col-lg-6">
      <%= f.label :email, "Email ID" %><br>
      <%= f.text_field :email, class: "form-control", placeholder: "Enter Email Address" %>
    </p>

    <p class="col-lg-6">
      <%= f.label :phone, "Contact Number" %><br>
      <%= f.text_field :phone, class: "form-control", placeholder: "Enter Contact Number" %>
    </p>
  </div>
  <div class="col-lg-12" >
    <h3>Project Details:</h3>
    <p class="col-lg-6">
      <%= f.label :project_name, "Project Name" %><br>
      <%= f.text_field :project_name, class: "form-control", placeholder: "Enter Project Name" %>
    </p>

    <p class="col-lg-6">
      <%= f.label :project_info, "Project Basic Info" %><br>
      <%= f.text_area :project_info, class: "form-control", placeholder: "Enter Project Information" %>
    </p>
  </div>
  <div class="col-lg-12" >
    <h3>Project Requirements:</h3>
    <p class="col-lg-6">
      <%= f.label :seed_url, "Seed Url" %><br>
      <%= f.text_field :seed_url, class: "form-control", placeholder: "Seed Url" %>
    </p>

    <p class="col-lg-6">
      <%= f.label :data_output_format, "Data Output Format" %><br>
      <%= f.text_field :data_output_format, class: "form-control", placeholder: "e.g. XML, CSV, JSON, XLSX, etc" %>
    </p>

    <p class="col-lg-6">
      <%= f.label :image_file, "Upload a Image" %><br>
      <%= f.file_field :image_file, class: "form-control"%>
    </p>

    <p class="col-lg-6">
      <%= f.label :document, "Upload a Document" %><br>
      <%= f.file_field :document, class: "form-control"%>
    </p>

    <p class="col-lg-6">
      <%= f.label :sample_file, "Sample file (Optional)" %><br>
      <%= f.text_field :sample_file, class: "form-control"%>
    </p>

    <p class="col-lg-6">
      <%= f.label :data_crawl_frequency, "Data Crawl Frequency" %><br>
      <%= f.text_field :data_crawl_frequency, class: "form-control"%>
    </p>

    <p class="col-lg-6">
      <%= f.label :data_schema, "Data Schema" %><br>
      <%= f.text_area :data_schema, class: "form-control" %>
    </p>

    <p class="col-lg-6">
      <%= f.label :other_requirement, "Other Requirements" %><br>
      <%= f.text_area :other_requirement, class: "form-control" %>
    </p>

    <p class="col-lg-12">
      <%= f.submit  class: "btn btn-lg btn-primary" %>
      <%= link_to "Back", welcome_index_path, class: "btn btn-lg btn-primary" %>
    </p>
  </div>
 

<% end %>
</div>
