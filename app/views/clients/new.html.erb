<div class="col-lg-12">
<%= form_for :client do |f| %>
  <div class="col-lg-12" >
    <h3>Basic Information:</h3>
    <p class="col-lg-6">
      <%= f.label :name, "Name" %><br>
      <%= f.text_field :name %>
    </p>
   
    <p class="col-lg-6">
      <%= f.label :company, "Company" %><br>
      <%= f.text_field :company %>
    </p>

    <p class="col-lg-6">
      <%= f.label :email, "Email ID" %><br>
      <%= f.text_field :email %>
    </p>

    <p class="col-lg-6">
      <%= f.label :phone, "Contact Number" %><br>
      <%= f.text_field :phone %>
    </p>
  </div>
  <div class="col-lg-12" >
    <h3>Project Details:</h3>
    <p class="col-lg-6">
      <%= f.label :project_name, "Project Name" %><br>
      <%= f.text_field :project_name %>
    </p>

    <p class="col-lg-6">
      <%= f.label :project_info, "Project Basic Info" %><br>
      <%= f.text_area :project_info %>
    </p>

    <p class="col-lg-12">
      <%= f.submit  class: "btn btn-lg btn-primary" %>
      <%= link_to "Back", welcome_index_path, class: "btn btn-lg btn-primary" %>
    </p>
  </div>
 

<% end %>
</div>